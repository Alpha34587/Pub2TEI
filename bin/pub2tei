#!/usr/bin/env ruby
require '../lib/rb/main'
input_arg = ARGV.shift
meta_arg = ARGV.shift
out_arg = ARGV.shift
raise "missing input argument(s) !" unless input_arg
raise "missing meta argument(s) !" unless meta_arg
raise "missing output argument(s) !" unless out_arg
Pub2tei.main(input_arg,meta_arg,out_arg)
